{
    "compilerOptions": {
        "baseUrl": "./src",
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "types": [
            "webpack-env"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "material-ui",
            "material-ui-icons"
        ],
        "allowJs": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "strict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "bin",
        "node_modules"
    ]
}